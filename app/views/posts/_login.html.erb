  <div id="user_header">
    <% if current_user %>
     <p> Logged in as <%= current_user.username %>.</p>
      <%= link_to "Log Out", logout_path, :class => 'logout' %>
    <% else %>
      <%= link_to "Sign Up", new_user_path, :class => 'signup' %>
      <%= link_to "Log In", new_session_path, :class => 'login' %>
    <% end %>
  </div>